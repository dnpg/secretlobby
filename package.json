{
  "name": "band-blast",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "turbo run db:generate",
    "db:migrate": "pnpm --filter @secretlobby/db db:migrate",
    "db:migrate:create": "pnpm --filter @secretlobby/db db:migrate:create",
    "db:migrate:deploy": "pnpm --filter @secretlobby/db db:migrate:deploy",
    "db:push": "pnpm --filter @secretlobby/db db:push",
    "db:studio": "pnpm --filter @secretlobby/db db:studio",
    "db:reset": "pnpm --filter @secretlobby/db db:reset",
    "db:seed": "pnpm --filter @secretlobby/db db:seed",
    "db:create-super-admin": "pnpm --filter @secretlobby/db db:create-super-admin",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.4.0",
    "prettier": "^3.5.0",
    "turbo": "^2.5.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "ioredis": "^5.9.2",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  }
}
